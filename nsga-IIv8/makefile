# Makefile para ejecutar el script de Python NSGA-II

# IntÃ©rprete de Python a usar
PYTHON = python3

# El script principal que contiene todo el cÃ³digo Python
SCRIPT_PRINCIPAL = ejecutable_nsga2.py

# El nombre del ejecutable que crearemos para cumplir con ./nsga-II
EJECUTABLE = nsga-II

# Regla por defecto: se ejecuta con 'make' o 'make all'
all: $(EJECUTABLE)

# Crea un enlace simbÃ³lico al script y le da permisos de ejecuciÃ³n
$(EJECUTABLE): $(SCRIPT_PRINCIPAL)
	@echo "#!/usr/bin/env $(PYTHON)" > $(EJECUTABLE)
	@cat $(SCRIPT_PRINCIPAL) >> $(EJECUTABLE)
	@chmod +x $(EJECUTABLE)
	@echo "âœ… 'Ejecutable' ./$(EJECUTABLE) creado/actualizado."

# Regla para limpiar los archivos generados
clean:
	@rm -f $(EJECUTABLE)
	@rm -rf __pycache__
	@echo "ðŸ§¹ Archivos generados eliminados."